{
  "name": "coda",
  "version": "0.1.0",
  "description": "Coda language",
  "categories": [
    "Languages"
  ],
  "author": {
    "name": "Edward A. Kmett",
    "email": "ekmett@gmail.com",
    "url": "http://github.com/ekmett"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ekmett/coda.git"
  },
  "bugs": {
    "url": "https://github.com/ekmett/coda/issues",
    "email": "ekmett@gmail.com"
  },
  "publisher": "ekmett",
  "license": "BSD-2-Clause",
  "engines": {
    "vscode": "^1.12.2"
  },
  "scripts": {
    "prepare": "node ./node_modules/vscode/bin/install && tsc -p ./",
    "lint": "tslint *.ts",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "path": "^0.12.7",
    "vscode-languageclient": "^3.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "license-checker": "^14.0.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "vsce": "^1.30.0",
    "vscode": "^1.0.3"
  },
  "activationEvents": [
    "onLanguage:coda"
  ],
  "main": "extension.js",
  "contributes": {
    "languages": [
      {
        "id": "coda",
        "extensions": [
          ".co"
        ],
        "aliases": [
          "Coda"
        ],
        "configuration": "./coda.configuration.json"
      }
    ]
  }
}
