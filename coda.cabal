name:          coda
category:      Language
version:       0.0.1.0
license:       BSD2
cabal-version: >= 1.24
license-file:  LICENSE.md
author:        Edward A. Kmett
maintainer:    Edward A. Kmett <ekmett@gmail.com>
stability:     provisional
homepage:      http://github.com/ekmett/coda/
bug-reports:   http://github.com/ekmett/coda/issues
copyright:     Copyright (C) 2017 Edward A. Kmett
build-type:    Custom
synopsis:      The coda compiler

description:
  This package provides Coda, a Visual Studio Code language experiment.

extra-source-files:
  .hlint.yaml
  CHANGELOG.md
  README.md
  test/data/message/*.golden
  test/shim/Coda/Console/Unicode.hs

source-repository head
  type: git
  location: git://github.com/ekmett/coda.git

flag test-doctest
  default: True
  manual: True

flag test-hlint
  default: False
  manual: True

flag test-spec
  default: True
  manual: True

flag test-tasty
  default: True
  manual: True

custom-setup
  setup-depends:
    base                 >= 4       && < 5,
    Cabal,
    cabal-doctest        >= 1       && < 1.1

library
  default-language: Haskell2010
  ghc-options: -Wall
  hs-source-dirs: src
  exposed-modules:
    Coda.Console
    Coda.Console.Command
    Coda.Console.Completion
    Coda.Console.Options
    Coda.Console.Unicode

    Coda.Data.Dyn
    Coda.Data.Queue
    Coda.Data.Seq
    Coda.Data.Sink
    Coda.Data.View

    Coda.Relative.At
    Coda.Relative.Class
    Coda.Relative.Delta
    Coda.Relative.List
    Coda.Relative.Map
    Coda.Relative.Measurement

    Coda.Server
    Coda.Server.Options

    Coda.Syntax.Keywords
    Coda.Syntax.Line

    Coda.Util.Aeson
    Coda.Util.Alex
    Coda.Util.Async
    Coda.Util.BitQueue
    Coda.Util.Bits
    Coda.Util.Instances
    Coda.Util.Pretty
    Coda.Util.STM

    Coda.Version

    Language.Server.Builder
    Language.Server.Protocol
    Language.Server.Parser

  other-modules:
    Paths_coda
    Language.Server.TH

  build-depends:
    aeson                >= 1.1      && < 1.3,
    ansi-wl-pprint       >= 0.6      && < 0.7,
    async                >= 2.1      && < 2.2,
    base                 >= 4.9      && < 5,
    base-orphans         >= 0.5      && < 1,
    bytestring           >= 0.10.8   && < 0.11,
    bifunctors           >= 5        && < 6,
    Cabal,
    comonad              >= 5        && < 6,
    containers           >= 0.5.7.1  && < 0.6,
    contravariant        >= 1.4      && < 2,
    data-default         >= 0.7.1.1  && < 0.8,
    exceptions           >= 0.8.2.1  && < 0.9,
    final-pretty-printer >= 0.1      && < 0.2,
    fingertree           >= 0.1.1    && < 0.2,
    ghc-prim,
    haskeline            >= 0.7.4    && < 0.8,
    hashable             >= 1.2.6    && < 1.3,
    hyphenation          >= 0.7      && < 0.8,
    lens                 >= 4.15     && < 5,
    lens-aeson           >= 1.0.2    && < 1.1,
    logging              >= 3.0.4    && < 3.1,
    mtl                  >= 2.2.1    && < 2.3,
    optparse-applicative >= 0.14     && < 0.15,
    profunctors          >= 5.2      && < 5.3,
    unordered-containers >= 0.2      && < 0.3,
    scientific           >= 0.3      && < 0.4,
    split                >= 0.2      && < 0.3,
    stm                  >= 2.4      && < 2.5,
    template-haskell     >= 2.11     && < 2.12,
    text                 >= 1.2      && < 1.3,
    transformers         >= 0.5      && < 0.6,
    transformers-base    >= 0.4.4    && < 0.5,
    uri-encode           >= 1.5.0.5  && < 1.6

executable coda
  default-language: Haskell2010
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N
  main-is: Main.hs
  build-depends:
    base,
    coda,
    lens,
    optparse-applicative

test-suite doctest
  type: exitcode-stdio-1.0
  default-language: Haskell2010
  main-is: doctest.hs
  hs-source-dirs: test/src
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N
  other-modules: Build
  if !flag(test-doctest)
    buildable: False
  else
    build-depends:
      base,
      bytestring,
      doctest    >= 0.11 && <0.14

test-suite hlint
  type: exitcode-stdio-1.0
  default-language: Haskell2010
  main-is: hlint.hs
  hs-source-dirs: test/src
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N
  other-modules: Build
  if !flag(test-hlint)
    buildable: False
  else
    build-depends:
      base,
      hlint >= 2.0.1

test-suite spec
  type: exitcode-stdio-1.0
  default-language: Haskell2010
  main-is: spec.hs
  hs-source-dirs: test/src
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N
  if !flag(test-spec)
    buildable: False
  else
    build-depends:
      base,
      hspec >= 2 && < 3

test-suite tasty
  type: exitcode-stdio-1.0
  default-language: Haskell2010
  main-is: tasty.hs
  hs-source-dirs: test/src
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N
  other-modules: MessageTest
  if !flag(test-tasty)
    buildable: False
  else
    build-depends:
      aeson,
      base,
      coda,
      bifunctors,
      bytestring,
      filepath,
      lens,
      tagged,
      tasty        >= 0.11 && < 0.12,
      tasty-golden >= 2.3  && < 2.4,
      tasty-hunit  >= 0.9  && < 0.10,
      text
