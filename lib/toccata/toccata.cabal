name:          toccata
version:       0
license:       BSD2
license-File:  LICENSE.md
copyright:     (c) Edward Kmett 2018
author:        Edward Kmett
maintainer:    ekmett@gmail.com
stability:     Experimental
category:      Language
homepage:      http://github.com/ekmett/coda
bug-reports:   http://github.com/ekmett/coda/issues
build-type:    Simple
cabal-version: >= 2.0
synopsis:      Bootstrapping Coda
description:   Bootstrapping Coda.

source-repository head
  type: git
  location: git://github.com/ekmett/coda.git

library
  default-language: Haskell2010
  ghc-options: -Wall
  hs-source-dirs: src

  build-depends:
    ansi-terminal,
    base >= 4.11 && < 5,
    data-default-class,
    exceptions,
    haskeline,
    lens,
    optparse-applicative,
    prettyprinter,
    prettyprinter-ansi-terminal,
    text-short,
    transformers

  exposed-modules:
    Console
    Console.Options
    Console.Pretty
    Syntax.Name

  other-modules:
    Console.Unicode

executable toccata
  default-language: Haskell2010
  hs-source-dirs: app
  main-is: Main.hs
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N

  build-depends:
    base,
    optparse-applicative,
    toccata

  other-modules:
    Paths_toccata
